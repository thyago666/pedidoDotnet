@model PedidosLanche.Models.Produto

<h1>Editar Produto</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="ProdutoId" />
    <input type="hidden" asp-for="ImagemUrl" />
    <div>
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div>
        <label>Valor</label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor"></span>
    </div>


    <br />
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</form>

