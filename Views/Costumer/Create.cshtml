@model PedidosLanche.Models.Cliente

<div>
    <h1>Criar Cliente</h1>
    <partial name="_ValidationScriptsPartial" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div>
            <label>Nome</label>

            <input class="form-control" type="text" asp-for="Nome">
            <span asp-validation-for="Nome"></span>
        </div>
        <div>
            <label>Telefone</label>
            <input class="form-control" type="text" asp-for="Telefone">
            <span asp-validation-for="Telefone"></span>
        </div>
  

        <br />
        <button type="submit" class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>

    </form>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


</div>
